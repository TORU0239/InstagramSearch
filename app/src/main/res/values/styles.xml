<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Instagram search app theme -->
    <style name="InstagramSearchAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gelato_color_primary</item>
        <item name="colorPrimaryDark">@color/gelato_color_primary_dark</item>
        <item name="colorAccent">@color/gelato_color_accent</item>
    </style>

    <!-- basic toolbar label theme -->
    <style name="BasicToolbarLabelTheme" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- basic toolbar theme -->
    <style name="BasicToolbarTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/gelato_color_primary</item>
        <item name="titleTextAppearance">@style/BasicToolbarLabelTheme</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- Detail Activity Style -->
    <style name="DetailImageActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/gelato_color_accent</item>
    </style>
</resources>